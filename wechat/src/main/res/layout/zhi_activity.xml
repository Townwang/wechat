<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zhi_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_green_10"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="16dp">
    <LinearLayout
        android:id="@+id/qa_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="14dp"
        android:paddingTop="42dp">

        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@string/act_switch"
            android:textColor="#F5F5F5"
            android:textSize="@dimen/text12Size" />

        <TextView
            android:id="@+id/zhi_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/wei_zhi_title"
            android:textColor="#ffffff"
            android:textSize="@dimen/text32Size" />


        <ImageView
            android:id="@+id/qa_image_view"
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:layout_gravity="center_horizontal|center"
            android:clickable="false"
            android:focusable="false"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/zhi_summery"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="26dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/wei_zhi_tip"
            android:textColor="#ffffff"
            android:textSize="@dimen/text14Size"
            tools:ignore="NestedWeights" />

        <Button
            android:id="@+id/zhi_btn"
            android:background="@drawable/background_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="296dp"
            android:layout_gravity="center"
            android:text="@string/go_donate"
            android:textSize="@dimen/text14Size" />
    </LinearLayout>
</LinearLayout>
